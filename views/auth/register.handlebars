<div class="register my-5">
  {{#each errors}}
    <div class="row">
      <div class="col-sm-12">
        <div class="alert alert-danger">
        {{msg}}
        <span class="close alert-close">&times;</span>
        </div>
      </div>
    </div>
  {{/each}}
  <h1 class="display-4 text-center mb-4">{{ title }}</h1>
  <form action="/user/register" method="POST">
    <div class="row">
      <div class="col col-sm-12">
        <div class="form-group">
          <label for="exampleInputName">Name</label>
          <input type="text" name="name" class="form-control form-control-lg" id="exampleInputName" placeholder="Enter name">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col col-sm-12 col-md-6">
        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <input type="email" name="email" class="form-control form-control-lg" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
      </div>
      <div class="col col-sm-12 col-md-6">
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" name="password" class="form-control form-control-lg" id="exampleInputPassword1"
            placeholder="Enter password">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col col-sm-12">
        <div class="form-group">
          <label for="exampleInputPassword2">Password</label>
          <input type="password" name="cPassword" class="form-control form-control-lg" id="exampleInputPassword2"
            placeholder="Confirm password">
        </div>
      </div>
    </div>
    <button style="background: #3e5379; color: #fff" type="submit" class="btn btn-lg mt-3">Sign Up</button>
    <p class="lead text-center mt-4">If you already have an account, Let's <a href="/user/login">Sign In</a></p>
  </form>
</div>