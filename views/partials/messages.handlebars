<div class="messages-container">
  {{#if success_msg}}
  <div class="row mt-5">
    <div class="col col-sm-12">
      <div class="alert alert-success">
        {{ success_msg }}
        <span class="close alert-close">&times;</span>
      </div>
    </div>
  </div>
  {{/if}}

  {{#if error_msg}}
  <div class="row mt-5">
    <div class="col col-sm-12">
      <div class="alert alert-danger">
        {{ error_msg }}
        <span class="close alert-close">&times;</span>
      </div>
    </div>
  </div>
  {{/if}}

  {{#if error}}
  <div class="row mt-5">
    <div class="col col-sm-12">
      <div class="alert alert-danger">
        {{ error }}
        <span class="close alert-close">&times;</span>
      </div>
    </div>
  </div>
  {{/if}}
</div>