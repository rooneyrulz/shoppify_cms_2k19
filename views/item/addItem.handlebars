<div class="add-item my-5">
  <div class="container">
    {{#if errors}}
    <div class="messages-container">
      {{#each errors}}
      <div class="alert alert-danger">{{msg}}
        <span class="close alert-close">&times;</span>
      </div>
      {{/each}}
    </div>
    {{/if}}
    <div class="add-item-header mb-4" style="display: flex; flex-direction: row; justify-content: space-between; align-items: center">
      <h1 class="m-0" style="color: #3e5379;">{{ title }}</h1>
      <div class="btn-group">
        <a style="background: #3e5379;" href="/dashboard" class="btn float-right text-light">Back</a>
      </div>
    </div>
    <hr>
    <br>
    <form action="/items/add" method="POST" enctype="multipart/form-data">
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="exampleInputName">Name</label>
            <input type="text" name="name" class="form-control form-control-lg" id="exampleInputName"
              placeholder="Enter item">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="inlineFormInputGroup">Price</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text">$</div>
              </div>
              <input type="text" name="price" class="form-control form-control-lg" id="inlineFormInputGroup"
                placeholder="Enter Price">
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="exampleInputProvider">Provider</label>
            <input type="text" name="provider" class="form-control form-control-lg" id="exampleInputProvider"
              placeholder="Enter provider">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="exampleFormControlFile1">Pick an image</label>
            <input type="file" name="image" class="form-control-file" id="exampleFormControlFile1">
          </div>
        </div>
      </div>
      <button style="background: #3e5379; color: #fff" type="submit" class="btn mt-3 btn-lg">Publish</button>
    </form>
  </div>
</div>