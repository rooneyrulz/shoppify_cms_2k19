<div class="profiles my-5">
  <div class="container">
    <h1 style="color: #3e5379;">Profiles</h1>
    <hr>
    <br>
    {{#each profiles}}
    <div class="profiles-card mb-5">
      <img src="{{avatar}}" style="width: 350px" class="rounded" alt="...">
      <div>
        <h5 class="card-title">{{user.name}}</h5>
        <p class="lead">
          <i class="fas fa-map-marker-alt"></i>
          {{location}}
        </p>
        <p class="card-text date"><small class="">{{date}}</small></p>
      </div>
      <div>
        <a class="btn btn-light" href="/user/profiles/{{_id}}">
        <i class="far fa-eye"></i>
        View
      </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>