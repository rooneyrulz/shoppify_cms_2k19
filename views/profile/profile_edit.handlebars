<div class="edit-profile my-5">
  <div class="container">
    {{#if errors}}
    <div class="messages-container">
      {{#each errors}}
      <div class="alert alert-danger">{{msg}}
        <span class="close alert-close">&times;</span>
      </div>
      {{/each}}
    </div>
    {{/if}}
    <h1 class="mb-4" style="color: #3e5379;">Edit Profile</h1>
    <form method="POST" action="/user/profiles/create" enctype="multipart/form-data">
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="company">Company</label>
            <input id="company" type="text" value="{{profile.company}}" name="company" class="form-control form-control-lg" placeholder="Enter your company name">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="website">Website</label>
            <input id="website" type="text" name="website" class="form-control form-control-lg" value="{{profile.website}}"
              placeholder="Your website">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12 col-md-6">
          <div class="form-group">
            <label for="location">Location</label>
            <input id="location" value="{{profile.location}}" type="text" name="location" class="form-control form-control-lg"
              placeholder="Your location">
          </div>
        </div>
        <div class="col col-sm-12 col-md-6">
          <div class="form-group">
            <label for="status">Status</label>
            <input id="status" value="{{profile.status}}" type="text" name="status" class="form-control form-control-lg"
              placeholder="Martial status">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="skills">Skills</label>
            <input id="skills" value="{{profile.skills}}" type="text" name="skills" class="form-control form-control-lg"
              placeholder="Marketting, Development, Teaching..">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="bio">Bio</label>
            <textarea name="bio" value="{{profile.bio}}" id="bio" class="form-control form-control-lg" placeholder="Who you are.."></textarea>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <div id="accordianId" role="tablist" aria-multiselectable="true">
              <div class="card">
                <div class="card-header" role="tab" id="section1HeaderId">
                  <h5 class="mb-0">
                    <a data-toggle="collapse" data-parent="#accordianId" href="#section1ContentId" aria-expanded="true"
                      aria-controls="section1ContentId">
                      Social
                    </a>
                  </h5>
                </div>
                <div id="section1ContentId" class="collapse in" role="tabpanel" aria-labelledby="section1HeaderId">
                  <div class="card-body">
                    <div class="container">
                      <div class="row">
                        <div class="col col-sm-12">
                          <div class="form-group">
                            <label for="youtube">Youtube</label>
                            <input name="youtube" value="{{profile.social.youtube}}" id="youtube" class="form-control" placeholder="Youtube link">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col col-sm-12">
                          <div class="form-group">
                            <label for="twitter">Twitter</label>
                            <input name="twitter" value="{{profile.social.twitter}}" id="twitter" class="form-control" placeholder="Twitter link">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col col-sm-12">
                          <div class="form-group">
                            <label for="facebook">Facebook</label>
                            <input value="{{profile.social.facebook}}" name="facebook" id="facebook" class="form-control" placeholder="Facebook link">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col col-sm-12">
                          <div class="form-group">
                            <label for="linkedin">Linkedin</label>
                            <input value="{{profile.social.linkedin}}" name="linkedin" id="linkedin" class="form-control" placeholder="Linkedin link">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col col-sm-12">
                          <div class="form-group">
                            <label for="instagram">Instagram</label>
                            <input value="{{profile.social.instagram}}" name="instagram" id="instagram" class="form-control" placeholder="Instagram link">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col col-sm-12">
                          <div class="form-group">
                            <label for="github">Github</label>
                            <input value="{{profile.social.github}}" name="github" id="github" class="form-control" placeholder="Github link">
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col col-sm-12">
          <div class="form-group">
            <label for="exampleFormControlFile1">Change your profile pic</label>
            <input type="file" name="avatar" class="form-control-file" id="exampleFormControlFile1">
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-lg btn-info">Save</button>
    </form>
  </div>
</div>


